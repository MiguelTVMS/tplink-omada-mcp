{
    "mcpServers": {
        "tplink-omada-mcp": {
            "command": "docker",
            "args": [
                "run",
                "--rm",
                "-i",
                "--env",
                "OMADA_BASE_URL=https://controller.example.com:8043",
                "--env",
                "OMADA_CLIENT_ID=replace-with-client-id",
                "--env",
                "OMADA_CLIENT_SECRET=replace-with-client-secret",
                "--env",
                "OMADA_OMADAC_ID=replace-with-omadac-id",
                "--env",
                "OMADA_SITE_ID=optional-default-site",
                "--env",
                "OMADA_STRICT_SSL=false",
                "--env",
                "OMADA_TIMEOUT=10000",
                "jmtvms/tplink-omada-mcp:latest"
            ],
            "cwd": "/",
            "env": {
                "DOCKER_BUILDKIT": "1"
            }
        }
    }
}