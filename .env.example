# Omada controller base URL (must include protocol and port)
OMADA_BASE_URL=https://controller.example.com:8043

# OAuth client credentials generated under Omada Platform Integration
OMADA_CLIENT_ID=your-client-id
OMADA_CLIENT_SECRET=your-client-secret

# Omada controller (omadacId) you want to target; shown in the application details
OMADA_OMADAC_ID=your-omadac-id

# Optional alias for OMADA_OMADAC_ID, supported for compatibility
# OMADA_CONTROLLER_ID=optional-alias-for-omadac-id

# Optional default site ID; if omitted, each MCP call must pass a siteId argument
# OMADA_SITE_ID=optional-default-site

# Set to false to accept self-signed certificates during development
# OMADA_STRICT_SSL=false

# HTTP request timeout in milliseconds
# OMADA_TIMEOUT=10000

# Proxy to reach the controller (use full URL, e.g., https://proxy.example.com:8443)
# OMADA_PROXY_URL=https://proxy.example.com:8443

# Optional settings when running the HTTP/SSE transport
# MCP_HTTP_PORT=3000
# MCP_HTTP_HOST=0.0.0.0
# MCP_HTTP_PATH=/mcp
# MCP_HTTP_ALLOWED_HOSTS=localhost:3000
# MCP_HTTP_ALLOWED_ORIGINS=https://example-client.app
# MCP_HTTP_ENABLE_DNS_PROTECTION=true
# MCP_HTTP_STATEFUL=true
